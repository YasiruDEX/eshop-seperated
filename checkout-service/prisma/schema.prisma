generator client {
    provider = "prisma-client-js"
    output   = "../../../generated/prisma-checkout"
}

datasource db {
    provider = "mongodb"
    url      = env("CHECKOUT_DATABASE_URL")
}

model Cart {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    userId    String   @db.ObjectId
    itemId    String   @db.ObjectId
    price     Float
    quantity  Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([userId])
    @@index([itemId])
    @@map("cart")
}

model Wishlist {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    userId    String   @db.ObjectId
    itemId    String   @db.ObjectId
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([userId, itemId])
    @@index([userId])
    @@index([itemId])
    @@map("wishlist")
}
